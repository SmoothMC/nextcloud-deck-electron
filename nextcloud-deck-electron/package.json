{
  "name": "nextcloud-deck-electron",
  "version": "1.0.0",
  "description": "Standalone macOS app for Nextcloud Deck",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "de.yourdomain.nextcloud.deck",
    "productName": "Nextcloud Deck",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^latest",
    "electron-builder": "^latest"
  },
  "license": "MIT"
}