{
  "name": "nextcloud-deck-electron",
  "version": "1.0.0",
  "description": "Standalone macOS app for Nextcloud Deck",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "de.yourdomain.nextcloud.deck",
    "productName": "Nextcloud Deck",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "path/to/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^28.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^9.0.0"
  },
  "license": "MIT"
}